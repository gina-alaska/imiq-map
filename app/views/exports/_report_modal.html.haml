.modal.fade
  .modal-dialog{ style: 'min-width: 1024px;' }
    .modal-content
      .modal-header
        %button.close{ type: "button", data: { dismiss: "modal" } }
          &times;
            
        %h4.modal-title
          Export Report

      .modal-body
        %h4 Enter date range for report:
        = form_for report_exports_path(), remote: true do |f|
          .form-content{ style: 'padding:10px;' }
            .form-group
              .row
                .col-md-2.col-sm-12
                  .form-group
                    = f.label :starts_at, class: 'control-label'
                    = f.text_field :starts_at, class: 'form-control date-editor', placeholder: 'YYYY/MM/DD'
                .col-md-2.col-sm-12
                  .form-group
                    = f.label :ends_at, class: 'control-label'
                    = f.text_field :ends_at, class: 'form-control date-editor', placeholder: 'YYYY/MM/DD'
          = f.submit 'View exports', class: 'btn btn-primary'
:javascript
  $('.date-editor').datetimepicker({
    format: 'YYYY/MM/DD'
  });