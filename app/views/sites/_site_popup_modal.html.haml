.modal.fade
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        %button.close{ type: "button", data: { dismiss: "modal" } }
          &times;

        %h4.modal-title
          Sites Export
      %iframe{ src: sites_path(search_params), style: 'width: 100%; height: 500px; border: none;' }

      .modal-footer
        %button.btn.btn-default{ type: "button", data: { dismiss: "modal" } }
          Close
