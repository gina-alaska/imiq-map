%nav.navbar.navbar-default.navbar-fixed-top
  .container-fluid
    = paginate @sites
    .navbar-right
      .navbar-text= page_entries_info @sites

%table.table.table-striped{ style: 'margin-top: 50px;' }
  %thead
    %tr
      %th SiteID
      %th Name
      %th Location
      %th Networks
      %th Organizations
  %tbody
    - @sites.each do |site|
      = render 'row', site: site
= paginate @sites
